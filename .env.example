# Sprinklr API Configuration
# Get these from https://dev.sprinklr.com/
SPRINKLR_API_KEY=your_api_key_here
SPRINKLR_API_SECRET=your_api_secret_here
SPRINKLR_ENVIRONMENT=prod2  # Options: prod2, prod3, prod4, etc.
SPRINKLR_ACCESS_TOKEN=your_access_token_here
SPRINKLR_REFRESH_TOKEN=your_refresh_token_here

# Claude API Configuration
# Get this from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Provider Configuration ("anthropic" or "openai")
LLM_PROVIDER=anthropic

# OpenAI API Configuration (optional, required if LLM_PROVIDER=openai)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Application Settings
USE_MOCK_DATA=true  # Set to false when Sprinklr API is configured
CHROMA_DB_PATH=./data/chroma_db
